{
  "private": true,
  "name": "htm-pwd-starter",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development npm run clean && parcel ./src/index.html --open",
    "build": "cross-env NODE_ENV=production npm run clean && parcel build ./src/index.html --no-source-maps",
    "lint": "eslint src",
    "test": "jest",
    "clean": "rimraf .cache dist",
    "serve": "yarn build && serve -d dist",
    "deploy": "gh-pages-deploy"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*",
    "public/*",
    "dist/*",
    "src/static/sw.js"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.2.0",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "gh-pages-deploy": "^0.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "rimraf": "^2.6.3",
    "serve": "^10.1.1"
  },
  "dependencies": {
    "htm": "^2.0.0",
    "preact": "^8.4.2"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js"
    ],
    "testRegex": "(/(__tests__|tests)/.*|(\\.|/)(test|spec))\\.jsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/tests/__mocks__/*"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy"
    }
  },
  "staticFiles": {
    "staticPath": [
      "src/static"
    ]
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "prep": [
      "build"
    ],
    "commit": "Deploy",
    "noprompt": false
  }
}
